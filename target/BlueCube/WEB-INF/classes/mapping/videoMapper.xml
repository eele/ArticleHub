<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.zhku.jsj144.lzc.articleHub.mapper.VideoMapper">
	<resultMap id="videoResultMap" type="edu.zhku.jsj144.lzc.articleHub.pojo.Video">
		<result property="vid" column="vid" />
		<result property="uid" column="uid" />
		<result property="title" column="title" />
		<result property="category" column="category" />
		<result property="description" column="description" />
		<result property="pid" column="pid" />
		<result property="permission" column="permission" />
		<result property="password" column="password" />
		<result property="path" column="path" />
		<result property="verify" column="verify" />
		<result property="datetime" column="datetime" />
	</resultMap>
	
	<select id="getVideosByVid" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Video" resultMap="videoResultMap">
		select * from video where vid = #{vid}
	</select>
	
	<select id="getVideosByUid" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Video" resultMap="videoResultMap">
		select * from video where uid = #{uid}
	</select>
	
	<select id="getVideosByCategory" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Video" resultMap="videoResultMap">
		select * from video where category = #{category}
	</select>
	
	<select id="getVideosByPid" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Video" resultMap="videoResultMap">
		select * from video where pid = #{pid}
	</select>
	
	<select id="getVideosByTitle" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Video" resultMap="videoResultMap">
		select * from video where title like #{title}
	</select>
	
	<delete id="deleteVideoInfo" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Video">
		delete from video where vid = #{vid}
	</delete>
	
	<insert id="insertVideoInfo" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Video">
		insert into video 
		values(#{vid}, #{uid}, #{title}, #{category},
		 #{description}, #{pid}, #{permission}, 
		 #{password}, #{path}, #{verify}, #{datetime})
	</insert>
	
	<update id="updateVideoInfo" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Video">
		update video 
		set vid = #{vid}, uid = #{uid}, title = #{title}, category = #{category}, 
			description = #{description}, pid = #{pid}, permission = #{permission}, 
			password = #{password}, path = #{path}, verify = #{verify}, datetime = #{datetime}
		where vid = #{vid}
	</update>
</mapper>