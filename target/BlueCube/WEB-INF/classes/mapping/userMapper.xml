<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.zhku.jsj144.lzc.articleHub.mapper.UserMapper">
	<select id="getUserByName" resultType="edu.zhku.jsj144.lzc.articleHub.pojo.User">
		select uid,username,password from `user` where username = #{username}
	</select>
	
	<select id="getUserByUid" resultType="edu.zhku.jsj144.lzc.articleHub.pojo.User">
		select uid,username,description from `user` where uid = #{uid}
	</select>
	
	<delete id="deleteUser" parameterType="string">
		delete from `user` where uid = #{uid}
	</delete>
	
	<insert id="insertUser" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.User">
		insert into `user` values(#{uid}, #{username}, #{password}, #{description})
	</insert>
</mapper>