<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.zhku.jsj144.lzc.articleHub.mapper.HistoryMapper">
	<resultMap id="historyResultMap" type="edu.zhku.jsj144.lzc.articleHub.pojo.History">
		<result property="hid" column="hid" />
		<result property="vid" column="vid" />
		<result property="datetime" column="datetime" />
	</resultMap>
	
	<select id="getHistory" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.History" resultMap="historyResultMap">
		select hid,vid,datetime from history where uid = #{uid}
	</select>
	
	<delete id="deleteHistory" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.History">
		delete from history where hid = #{hid}
	</delete>
	
	<insert id="insertHistory" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.History">
		insert into history(hid, uid, vid, datetime) values(#{hid}, #{uid}, #{vid}, #{datetime})
	</insert>
</mapper>