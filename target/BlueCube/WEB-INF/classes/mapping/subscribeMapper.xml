<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.zhku.jsj144.lzc.articleHub.mapper.SubscribeMapper">
	<resultMap id="subscribeResultMap" type="edu.zhku.jsj144.lzc.articleHub.pojo.Subscribe">
		<result property="sid" column="sid" />
		<result property="s_uid" column="s_uid" />
		<result property="datetime" column="datetime" />
	</resultMap>
	
	<select id="getSubscribe" resultMap="subscribeResultMap">
		select sid,s_uid,datetime from subscribe where uid = #{uid}
	</select>
	
	<delete id="deleteSubscribe" parameterType="string">
		delete from subscribe where sid = #{sid}
	</delete>
	
	<insert id="insertSubscribe" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Subscribe">
		insert into subscribe(sid, uid, s_uid, datetime) values(#{sid}, #{uid}, #{s_uid}, #{datetime})
	</insert>
</mapper>