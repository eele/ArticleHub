<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.zhku.jsj144.lzc.articleHub.mapper.PlaylistMapper">
	<resultMap id="playlistResultMap" type="edu.zhku.jsj144.lzc.articleHub.pojo.Playlist">
		<result property="pid" column="pid" />
		<result property="uid" column="uid" />
		<result property="title" column="title" />
		<result property="description" column="description" />
		<result property="datetime" column="datetime" />
	</resultMap>
	
	<select id="getPlaylists" resultMap="playlistResultMap">
		select * from playlist where uid = #{uid}
	</select>
	
	<select id="getOnePlaylist" resultType="edu.zhku.jsj144.lzc.articleHub.pojo.Playlist">
		select * from playlist where pid = #{pid}
	</select>

	<delete id="deletePlaylist" parameterType="string">
		delete from playlist where pid = #{pid}
	</delete>
	
	<insert id="insertPlaylist" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Playlist">
		insert into playlist 
		values(#{pid}, #{uid}, #{title}, #{description}, #{datetime})
	</insert>
	
	<update id="updatePlaylistInfo" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Playlist">
		update playlist 
		set pid = #{pid}, uid = #{uid}, title = #{title}, 
			description = #{description}, datetime = #{datetime}
		where pid = #{pid}
	</update>
</mapper>