<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.zhku.jsj144.lzc.articleHub.mapper.FavoriteMapper">
	<resultMap id="favoriteResultMap" type="edu.zhku.jsj144.lzc.articleHub.pojo.Favorite">
		<result property="fid" column="fid" />
		<result property="vid" column="vid" />
		<result property="datetime" column="datetime" />
	</resultMap>
	
	<select id="getFavorite" resultMap="favoriteResultMap">
		select fid,vid,datetime from favorite where uid = #{uid}
	</select>
	
	<delete id="deleteFavorite" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Favorite">
		delete from favorite where fid = #{fid}
	</delete>
	
	<insert id="insertFavorite" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Favorite">
		insert into favorite(fid, uid, vid, datetime) values(#{fid}, #{uid}, #{vid}, #{datetime})
	</insert>
</mapper>