<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.zhku.jsj144.lzc.articleHub.mapper.MessageMapper">
	<resultMap id="messageResultMap" type="edu.zhku.jsj144.lzc.articleHub.pojo.Message">
		<result property="mid" column="mid" />
		<result property="vid" column="vid" />
		<result property="datetime" column="datetime" />
	</resultMap>
	
	<select id="getSystemMessages" resultMap="messageResultMap">
		select * from message where uid = #{uid} and text is not null
	</select>
	
	<select id="getCommentMessages" resultMap="messageResultMap">
		select * from message where uid = #{uid} and cid is not null
	</select>
	
	<select id="getSubscribeMessages" resultMap="messageResultMap">
		select * from message where uid = #{uid} and sid is not null
	</select>
	
	<select id="getFavoriteMessages" resultMap="messageResultMap">
		select * from message where uid = #{uid} and fid is not null
	</select>
	
	<delete id="deleteMessage" parameterType="string">
		delete from message where mid = #{mid}
	</delete>
	
	<insert id="insertMessage" parameterType="edu.zhku.jsj144.lzc.articleHub.pojo.Message">
		insert into message values(#{mid}, #{uid}, #{cid}, #{sid}, #{fid}, #{text}, #{datetime})
	</insert>
</mapper>